<% if @flag %>
  $(".registration-messages").html("<%= escape_javascript(render("flash")) %>");
  $("#signup_form")[0].reset();
  $(document).ready(function() {
    setTimeout(function() {
      $(".registration-messages .devise-success").slideUp();
    }, 5000);
  });
<% else %>
  $(".registration-messages").html("<%= escape_javascript(render("errors")) %>");
  $(document).ready(function() {
    setTimeout(function() {
      $(".registration-messages .devise-errors").slideUp();
    }, 5000);
  });
<% end %>