<% if @flag %>
  $(".password-messages").html("<%= escape_javascript(render("flash")) %>");
  $("#password_form")[0].reset();
  $(document).ready(function() {
    setTimeout(function() {
      $(".password-messages .devise-success").slideUp();
    }, 5000);
  });
<% else %>
  $(".password-messages").html("<%= escape_javascript(render("errors")) %>");
  $("#password_form")[0].reset();
  $(document).ready(function() {
    setTimeout(function() {
      $(".password-messages .devise-errors").slideUp();
    }, 5000);
  });
<% end %>