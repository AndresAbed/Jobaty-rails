<% if @flag %>
  $(".contact-messages").html("<%= escape_javascript(render("success")) %>");
  $("#contact_form")[0].reset();
  $(document).ready(function() {
    setTimeout(function() {
      $(".contact-messages .devise-success").slideUp();
    }, 6000);
  });
  $('.form-process').fadeOut();
<% else %>
  $(".contact-messages").html("<%= escape_javascript(render("errors")) %>");
  $(document).ready(function() {
    setTimeout(function() {
      $(".contact-messages .devise-errors").slideUp();
    }, 6000);
  });
  $('.form-process').fadeOut();
<% end %>