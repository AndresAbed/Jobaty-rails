    <header id="header" class="transparent-header page-section dark">
      <div class="cd-user-modal"> <!-- this is the entire modal form, including the background -->
          <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
            <ul class="cd-switcher">
              <li><a href="#0">Ingresar</a></li>
              <li><a href="#0">Registrarse</a></li>
            </ul>
            <div id="cd-login"> <!-- log in form -->
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
              html: {class: "cd-form"}) do |f| %>
                <p class="fieldset">
                  <label class="image-replace cd-email" for="signin-email">E-mail</label>
                  <%= f.email_field :email, placeholder: "E-mail", 
                  class: "full-width has-padding has-border", id: "signin-email" %>
                  <span class="cd-error-message">¡Error Email no registrado!</span>
                </p>
                <p class="fieldset">
                  <label class="image-replace cd-password" for="signin-password">Contraseña</label>
                  <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña",
                   class: "full-width has-padding has-border", id: "signin-password"%>
                  <a href="#0" class="hide-password">Show</a>
                  <span class="cd-error-message">¡Error tu contraseña es equivocada!</span>
                </p>
                <p class="fieldset">
                  <%= f.check_box :remember_me, id: "remember-me" %>
                  <label for="remember-me">¡Recuerdame!</label>
                  <img class="u-linkedinbutton" src="<%= image_path('Sign-In-Small---Active.png') %>">
                </p>
                <p class="fieldset">
                  <a href="user-recover-password.html" class="recover-password">Recuperar contraseña</a>
                </p>
                <p class="fieldset">
                  <%= f.submit "Log in", class: "full-width" %>
                </p>
              <% end %>  
              <p class="cd-form-bottom-message"><a href="#0">¿Olvidaste tu contraseña?</a></p>
              <!-- <a href="#0" class="cd-close-form">Close</a> -->
            </div> <!-- cd-login -->
            <div id="cd-signup"> <!-- sign up form -->
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: {class: "cd-form"}, remote: true) do |f| %>
                <div class="registration-errors">
                </div>
                <p class="fieldset sideby">
                  <label class="image-replace cd-username" for="signup-username">Nombre</label>
                  <%= f.text_field :first_name, placeholder: "Nombres",
                  class: "full-width has-padding has-border", id: "signup-username" %>
                  <span class="cd-error-message">¡Error ingrese sus nombres!</span>
                </p>
                 <p class="fieldset sideby">
                  <label class="image-replace cd-username" for="signup-username">Apellidos</label>
                  <%= f.text_field :last_name, placeholder: "Apellidos",
                  class: "full-width has-padding has-border", id: "signup-username" %>
                  <span class="cd-error-message">¡Error ingrese sus Apellidos!</span>
                </p>
                <p class="fieldset">
                  <%= f.email_field :email, placeholder: "E-mail",
                  class: "full-width has-padding has-border", id: "signup-email" %>
                  <span class="cd-error-message">¡Error ingrese un mail valido!</span>
                </p>
                <p class="fieldset">
                  <label class="image-replace cd-password" for="signup-password">Contraseña</label>
                  <%= f.text_field :password, placeholder: "Contraseña", autocomplete: "off",
                  class: "full-width has-padding has-border", id: "signup-password" %>
                  <a href="#0" class="hide-password">Show</a>
                  <span class="cd-error-message">¡Error tu contraseña tiene que ser al menos 8 caracteres!</span>
                </p>
                <p class="fieldset">
                  <label class="image-replace cd-password" for="signup-password">Confirmar contraseña</label>
                  <%= f.text_field :password_confirmation, placeholder: "Confirmar contraseña", 
                  autocomplete: "off", class: "full-width has-padding has-border", id: "signup-password" %>
                  <a href="#0" class="hide-password">Show</a>
                  <span class="cd-error-message">¡Error no concuerda con tu contraseña!</span>
                </p>
                <p class="fieldset">
                  <input type="checkbox" id="accept-terms">
                  <label for="accept-terms">Acepto los <a href="#0">Terminos y condiciones</a></label>
                </p>
                <p class="fieldset">
                  <%= f.submit "Create acconut", class: "full-width has-padding" %>
                </p>
              <% end %>
              <!-- <a href="#0" class="cd-close-form">Close</a> -->
            </div> <!-- cd-signup -->
            <div id="cd-reset-password"> <!-- reset password form -->
              <p class="cd-form-message">Perdiste tu contraseña? Please enter your email address. You will receive a link to create a new password.</p>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), 
              html: { method: :post, class: "cd-form" }) do |f| %>
                <p class="fieldset">
                  <label class="image-replace cd-email" for="reset-email">E-mail</label>
                  <%= f.email_field :email, placeholder: "E-mail",
                  class: "full-width has-padding has-border", id: "signup-email" %>
                  <span class="cd-error-message">Error message here!</span>
                </p>
                <p class="fieldset">
                  <%= f.submit "Create acconut", class: "full-width has-padding" %>
                </p>
              <% end %>
              <p class="cd-form-bottom-message"><a href="#0">Back to log-in</a></p>
            </div> <!-- cd-reset-password -->
            <a href="#0" class="cd-close-form">Close</a>
          </div> <!-- cd-user-modal-container -->
      </div> <!-- cd-user-modal -->
